# Brooks Trading Coach - Environment Variables
# Copy this file to .env and fill in your values

# LLM Configuration (optional - app works without it)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o
OPENAI_BASE_URL=https://api.openai.com/v1

# Data Provider API Keys (optional - yfinance works without keys)
POLYGON_API_KEY=your_polygon_api_key_here
ALPACA_API_KEY=your_alpaca_api_key_here
ALPACA_SECRET_KEY=your_alpaca_secret_key_here

# Application Settings
LOG_LEVEL=INFO
DATABASE_URL=sqlite:///data/trades.db
OUTPUTS_DIR=outputs
CACHE_DIR=data/cache

# Risk Controls (soft guardrails)
MAX_DAILY_LOSS_R=3.0
MAX_LOSING_STREAK=3
DEFAULT_RISK_PER_TRADE_PCT=1.0
